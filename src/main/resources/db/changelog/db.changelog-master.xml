<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">


    <changeSet id="createUsersTable" author="skillbox">
        <createTable tableName="users">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name_user" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="createCardTable" author="skillbox">
        <createTable tableName="card">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="number_card" type="bigint"/>
            <column name="time_work" type="integer"/>
            <column name="status" type="varchar(255)"/>
            <column name="balance" type="double"/>
            <column name="users_id" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>